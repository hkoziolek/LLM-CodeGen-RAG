      <pou name="MY_FT_AVG" pouType="functionBlock">
        <interface>
          <inputVars>
            <variable name="Signal_In">
              <type>
                <REAL/>
              </type>
              <documentation>
                <xhtml:p><![CDATA[Signal_In]]></xhtml:p>
              </documentation>
            </variable>
            <variable name="PT">
              <type>
                <TIME/>
              </type>
              <documentation>
                <xhtml:p><![CDATA[PT]]></xhtml:p>
              </documentation>
            </variable>
            <variable name="N">
              <type>
                <INT/>
              </type>
              <documentation>
                <xhtml:p><![CDATA[N]]></xhtml:p>
              </documentation>
            </variable>
          </inputVars>
          <localVars>
            <variable name="fb_SH_1">
              <type>
                <derived name="SH_1"/>
              </type>
              <documentation>
                <xhtml:p><![CDATA[fb_SH_1]]></xhtml:p>
              </documentation>
            </variable>
            <variable name="fb_FT_AVG">
              <type>
                <derived name="FT_AVG"/>
              </type>
              <documentation>
                <xhtml:p><![CDATA[fb_FT_AVG]]></xhtml:p>
              </documentation>
            </variable>
          </localVars>
